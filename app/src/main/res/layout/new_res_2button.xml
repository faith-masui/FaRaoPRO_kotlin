<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="3dp" >

    <Button
        android:id="@+id/button_btn_first"
        style="@style/jp_faraoradio_btn_plane"
        android:layout_width="@dimen/jp_faraoradio_button_width"
        android:layout_height="@dimen/jp_faraoradio_button_height"
        android:layout_marginTop="8dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_btn_second"
        style="@style/jp_faraoradio_btn_plane"
        android:layout_width="@dimen/jp_faraoradio_button_width"
        android:layout_height="@dimen/jp_faraoradio_button_height"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/button_lnr_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal" />

</LinearLayout>