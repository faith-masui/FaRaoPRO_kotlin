<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/res_list_item" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageButton
                android:id="@+id/deletelist_timer_ibtn_delete"
                android:layout_width="@dimen/jp_faraoradio_simplelist_height"
                android:layout_height="@dimen/jp_faraoradio_simplelist_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/res_list_item"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_delete" />

            <LinearLayout
                android:id="@+id/deletelist_timer_lnr_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/jp_faraoradio_timerlist_height"
                android:layout_marginLeft="@dimen/jp_faraoradio_list_margin"
                android:background="@drawable/res_list_item"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/deletelist_timer_txt_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="タイマー名" />

                <TextView
                    android:id="@+id/deletelist_timer_txt_name"
                    style="@style/jp_faraoradio_text_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="チャンネル名" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/deletelist_timer_txt_time"
                        style="@style/jp_faraoradio_text_14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:text="時間" />

                    <TextView
                        android:id="@+id/deletelist_timer_txt_week"
                        style="@style/jp_faraoradio_text_14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:text="曜日" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>