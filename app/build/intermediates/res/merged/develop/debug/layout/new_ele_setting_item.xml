<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/res_list_item"
    tools:context=".act.newone.MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/jp_faraoradio_simplelist_height" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/settinglist_txt_text"
                style="@style/jp_faraoradio_single_line_text_in_list"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/settinglist_img_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/jp_faraoradio_list_margin"
                android:src="@drawable/new_icn_next" />

            <Switch
                android:id="@+id/settinglist_switch_enable_interrupt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/jp_faraoradio_list_margin"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>