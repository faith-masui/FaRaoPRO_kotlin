<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_lnr_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header_lnr_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jp_faraoradio_header_height"
        android:background="@color/jp_farao_theme"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/header_btn_left"
                style="@style/jp_faraoradio_txt_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:singleLine="true"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/header_ibtn_left"
                android:layout_width="@dimen/jp_faraoradio_header_icon_size"
                android:layout_height="@dimen/jp_faraoradio_header_icon_size"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/icon"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/header_img_logo"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/header_txt_caption"
                style="@style/jp_faraoradio_single_line_text_in_header"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/header_btn_right"
                style="@style/jp_faraoradio_txt_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:singleLine="true"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/header_ibtn_right"
                android:layout_width="@dimen/jp_faraoradio_header_icon_size"
                android:layout_height="@dimen/jp_faraoradio_header_icon_size"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/icon"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/jp_farao_list_border" />

</LinearLayout>