<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        style="@style/jp_faraoradio_text_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_seek_holder"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/msg_intro_volume_setting" />

    <LinearLayout
        android:id="@+id/linear_seek_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cap_bgm_volume" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_volume_min" />

            <SeekBar
                android:id="@+id/seek_second"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressDrawable="@drawable/seekbar"
                android:thumb="@drawable/seekbar_control"
                android:thumbTint="@color/jp_farao_theme"
                style="@style/CustomProgressBarHorizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_volume_max" />
        </LinearLayout>

        <TextView
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cap_interrupt_volume" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_volume_min" />

            <SeekBar
                android:id="@+id/seek_first"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressDrawable="@drawable/seekbar"
                android:thumb="@drawable/seekbar_control"
                android:thumbTint="@color/jp_farao_theme"
                style="@style/CustomProgressBarHorizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_volume_max" />
        </LinearLayout>
        <TextView
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cap_volume_audio_focus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_volume_min" />

            <SeekBar
                android:id="@+id/seek_third"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressDrawable="@drawable/seekbar"
                android:thumb="@drawable/seekbar_control"
                android:thumbTint="@color/jp_farao_theme"
                style="@style/CustomProgressBarHorizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_volume_max" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_reset"
        style="@style/jp_faraoradio_btn_plane"
        android:layout_width="@dimen/jp_faraoradio_button_width"
        android:layout_height="@dimen/jp_faraoradio_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/jp_faraoradio_footer_height"
        android:layout_marginTop="8dp"
        android:background="@drawable/new_res_button_plane"
        android:text="@string/cap_volume_restore_default" />

</RelativeLayout>