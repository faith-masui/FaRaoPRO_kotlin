<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/historylist_lnr_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/res_list_item"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/jp_faraoradio_imagelist_height"
            android:layout_height="@dimen/jp_faraoradio_imagelist_height" >

            <ImageView
                android:id="@+id/historylist_img_thumb"
                android:layout_width="@dimen/jp_faraoradio_imagelist_height"
                android:layout_height="@dimen/jp_faraoradio_imagelist_height"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/noimage" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/jp_faraoradio_list_margin"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp" >

                <ImageView
                    android:id="@+id/historylist_image_play"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/new_icn_play_small" />

                <TextView
                    android:id="@+id/historylist_text_channel_name"
                    style="@style/jp_faraoradio_text_18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/historylist_image_play"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="none" />
            </RelativeLayout>

            <TextView
                android:id="@+id/historylist_text_title"
                style="@style/jp_faraoradio_text_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="none"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/historylist_text_artist_name"
                style="@style/jp_faraoradio_text_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="none"
                android:textColor="@color/jp_farao_text_gray"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>