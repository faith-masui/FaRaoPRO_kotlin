<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pattern_detail_text_date"
        style="@style/jp_faraoradio_text_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cap_last_update_time" />

        <TextView
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : " />

        <TextView
            android:id="@+id/pattern_detail_text_lastupdate"
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cap_next_update_time" />

        <TextView
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : " />

        <TextView
            android:id="@+id/pattern_detail_text_nextupdate"
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cap_pattern_id" />

        <TextView
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : " />

        <TextView
            android:id="@+id/pattern_detail_text_patternid"
            style="@style/jp_faraoradio_text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>