<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/text_introduction"
        style="@style/jp_faraoradio_text_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switch_enable_auto_boot"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/msg_intro_auto_boot" />

    <Switch
        android:id="@+id/switch_enable_auto_boot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="@string/page_title_setting_enable_autoboot"
        android:textColor="@color/jp_farao_text_default"
        android:thumb="@drawable/resource_switch_plane" />

</RelativeLayout>